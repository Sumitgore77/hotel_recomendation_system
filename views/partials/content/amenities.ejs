<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Manage Amenities</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      overflow: hidden;
    }

    .amenity-wrapper {
      height: 100vh;
      display: flex;
      flex-direction: column;
      padding: 20px;
      box-sizing: border-box;
      background-color: #f8f9fa;
    }

    .form-section {
      flex-shrink: 0;
    }

    .table-section {
      flex-grow: 1;
      margin-top: 20px;
    }

    .table-wrapper {
      height: 100%;
      overflow: hidden;
    }

    table {
      table-layout: fixed;
      width: 100%;
    }

    th, td {
      vertical-align: middle;
      text-align: center;
      padding: 10px;
    }

    tbody tr:hover {
      background-color: #f1f1f1;
      transition: background-color 0.3s ease;
    }

    h2, h4 {
      margin-bottom: 10px;
      color: #343a40;
    }

    .btn-danger:hover {
      background-color: #bb2d3b;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .btn-success:hover {
      background-color: #198754;
    }
  </style>
</head>

<body>
  <div class="amenity-wrapper">
    <div class="form-section">
      <h2>Add New Amenity</h2>
      <form action="/admin/add-amenity" method="POST" class="row g-3">
        <div class="col-md-10">
          <input type="text" name="amenity_name" class="form-control" placeholder="Enter amenity name" required />
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-success w-100">Add Amenity</button>
        </div>
      </form>
    </div>

    <div class="table-section">
      <h4>Amenity List</h4>
      <div class="table-wrapper">
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>Sr. No.</th>
              <th>Amenity Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (!amenities || amenities.length === 0) { %>
              <tr>
                <td colspan="3" class="text-muted text-center">No amenities present.</td>
              </tr>
            <% } else { %>
              <% amenities.forEach((amenity, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= amenity.amenity_name %></td>
                  <td>
                    <form method="POST" action="/admin/delete-amenity/<%= amenity.amenity_id %>" onsubmit="return confirm('Delete this amenity?')">
                      <button class="btn btn-sm btn-danger" title="Delete"><i class="bi bi-trash"></i></button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>
