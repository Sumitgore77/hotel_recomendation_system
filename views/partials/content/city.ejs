<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Manage Cities</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    html,
    body {
      height: 100%;
      margin: 0;
      overflow: hidden;
    }

    .city-wrapper {
      height: 100vh;
      display: flex;
      flex-direction: column;
      padding: 20px;
      box-sizing: border-box;
      background-color: #f8f9fa;
    }

    .form-section {
      flex-shrink: 0;
    }

    .table-section {
      flex-grow: 1;
      margin-top: 20px;
    }

    .table-wrapper {
      height: 100%;
      overflow: hidden;
    }

    table {
      table-layout: fixed;
      width: 100%;
    }

    tbody tr:nth-child(n+6) {
      display: none;
    }

    th,
    td {
      vertical-align: middle;
      text-align: center;
      padding: 10px;
    }

    h2,
    h4 {
      margin-bottom: 10px;
      color: #343a40;
    }

    /* Hover effects */
    tbody tr:hover {
      background-color: #f1f1f1;
      transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
      background-color: #bb2d3b;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .btn-dark:hover {
      background-color: #1c1c1c;
    }
  </style>
</head>

<body>
  <div class="city-wrapper">
    <div class="form-section">
      <h2>Add New City</h2>
      <form action="/admin/add-city" method="POST" class="row g-3">
        <div class="col-md-5">
          <input type="text" name="city_name" class="form-control" placeholder="Enter city name" required />
        </div>
        <div class="col-md-5">
          <input type="text" name="pincode" class="form-control" placeholder="Enter pincode" required />
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-dark w-100">Add City</button>
        </div>
      </form>
    </div>

    <div class="table-section">
      <h4>City List</h4>
      <div class="table-wrapper">
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>City Name</th>
              <th>Pincode</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (cities.length === 0) { %>
            <tr>
              <td colspan="4">No cities found.</td>
            </tr>
            <% } else { %>
            <% cities.forEach((city, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= city.city_name %></td>
              <td><%= city.pincode %></td>
              <td>
                <form method="POST" action="/admin/delete-city/<%= city.city_id %>"
                  onsubmit="return confirm('Delete this city?')">
                  <button class="btn btn-sm btn-danger" title="Delete">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>
