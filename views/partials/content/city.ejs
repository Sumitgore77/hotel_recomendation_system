<div class="container mt-5">
  <h2>Add New City</h2>

  <!-- Form to add city and pincode -->
  <form action="/admin/add-city" method="POST" class="row g-3 mb-4">
    <div class="col-md-5">
      <input type="text" name="city_name" class="form-control" placeholder="Enter city name" required />
    </div>
    <div class="col-md-5">
      <input type="text" name="pincode" class="form-control" placeholder="Enter pincode" required />
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-success w-100">Add City</button>
    </div>
  </form>

  <!-- Table to display city list -->
  <h4 class="mt-4">City List</h4>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>City Name</th>
        <th>Pincode</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
  <% if (cities.length === 0) { %>
    <tr>
      <td colspan="4" class="text-center">No cities found.</td>
    </tr>
  <% } else { %>
    <% cities.forEach((city, index) => { %>
      <tr>
        <td><%= index + 1 %></td> <!-- Serial number starts from 1 -->
        <td><%= city.city_name %></td>
        <td><%= city.pincode %></td>
        <td>
          <form method="POST" action="/admin/delete-city/<%= city.city_id %>" onsubmit="return confirm('Are you sure you want to delete this city?')">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  <% } %>
</tbody>

  </table>
</div>
