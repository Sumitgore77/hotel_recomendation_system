<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>User Dashboard - Hotels</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f6f8;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding-top: 70px;
    }

    .navbar {
      background-color: #1e2a38 !important;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .navbar-brand {
      color: #f8c291 !important;
      font-weight: 600;
      font-size: 1.25rem;
    }

    .navbar-brand:hover {
      color: #ffd8a8 !important;
    }

    .btn-outline-danger {
      border-color: #dc3545;
      color: #dc3545;
    }

    .btn-outline-danger:hover {
      background-color: #dc3545;
      color: white;
    }

    .profile-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: linear-gradient(135deg, #f8c291, #fad390);
      color: #1e2a38;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      text-transform: uppercase;
      margin-right: 10px;
      cursor: pointer;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
      transition: 0.3s ease;
    }

    .profile-avatar:hover {
      transform: scale(1.1);
    }

    .dropdown-toggle::after {
      display: none;
    }

    .dropdown-menu {
      min-width: 220px;
    }

    .dropdown-item-text {
      font-size: 0.9rem;
      color: #333;
    }

    h3 {
      color: #1e2a38;
      font-weight: bold;
    }

    .hotel-card {
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      cursor: pointer;
      background-color: #fff;
      border: 1px solid #e0e0e0;
    }

    .hotel-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
    }

    .card-body {
      padding: 1rem;
    }

    .card-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: #1e2a38;
    }

    .card-text {
      font-size: 0.95rem;
      color: #555;
    }

    .modal-header {
      background-color: #1e2a38;
      color: white;
    }

    .badge {
      font-size: 0.8rem;
      padding: 0.5em 0.75em;
      border-radius: 12px;
      background-color: #f1f1f1;
      border: 1px solid #ccc;
      color: #333;
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/user/home">üè® Hotel Recommender</a>

      <div class="d-flex align-items-center">
        <div class="dropdown">
          <div class="d-flex align-items-center dropdown-toggle" role="button" data-bs-toggle="dropdown">
            <div class="profile-avatar">
              <%= typeof username !== 'undefined' ? username.charAt(0).toUpperCase() : '?' %>
            </div>
            <span class="text-white fw-semibold me-3"><%= username || 'Guest' %></span>
          </div>
          <ul class="dropdown-menu dropdown-menu-end shadow">
            <li><span class="dropdown-item-text"><strong>Name:</strong> <%= username || 'N/A' %></span></li>
            <li><span class="dropdown-item-text"><strong>Email:</strong> <%= email || 'N/A' %></span></li>
            <li><span class="dropdown-item-text"><strong>Contact:</strong> <%= contact || 'N/A' %></span></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="/logout"><i class="fa fa-sign-out-alt me-2"></i>Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container">
    <h3 class="mb-4">Available Hotels</h3>

    <!-- Search & Filters -->
    <div class="row mb-4">
      <div class="col-md-4">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by hotel name...">
      </div>
      <div class="col-md-4">
        <select id="cityFilter" class="form-select">
          <option value="">Filter by City</option>
          <% [...new Set(hotels.map(h => h.city_name))].forEach(city => { %>
            <option value="<%= city %>"><%= city %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-4">
        <select id="amenityFilter" class="form-select">
          <option value="">Filter by Amenity</option>
          <% 
            const amenities = hotels.flatMap(h => h.Amenities ? h.Amenities.split(',') : []);
            [...new Set(amenities.map(a => a.trim()))].forEach(am => {
          %>
            <option value="<%= am %>"><%= am %></option>
          <% }) %>
        </select>
      </div>
    </div>

    <% const amenityIcons = {
      'WiFi': 'fa-wifi',
      'Parking': 'fa-square-parking',
      'Pool': 'fa-person-swimming',
      'Gym': 'fa-dumbbell',
      'AC': 'fa-snowflake',
      'Restaurant': 'fa-utensils',
      'Spa': 'fa-spa',
      'Bar': 'fa-martini-glass',
      'TV': 'fa-tv',
      'Laundry': 'fa-shirt'
    }; %>

    <% if (hotels.length > 0) { %>
    <div class="row">
      <% hotels.forEach((hotel) => { %>
      <div 
        class="col-md-4 mb-4 hotel-card-container"
        data-name="<%= hotel.hotel_name.toLowerCase() %>"
        data-city="<%= hotel.city_name.toLowerCase() %>"
        data-amenities="<%= hotel.Amenities ? hotel.Amenities.toLowerCase() : '' %>"
      >
        <div class="card hotel-card" data-bs-toggle="modal" data-bs-target="#hotelModal<%= hotel.hotel_id %>">
          <% if (hotel.image) { %>
          <img src="/uploads/<%= hotel.image %>" class="card-img-top" alt="Hotel Image">
          <% } else { %>
          <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" alt="No Image">
          <% } %>
          <div class="card-body">
            <h5 class="card-title text-primary"><%= hotel.hotel_name %></h5>
            <p class="card-text mb-1"><strong>City:</strong> <%= hotel.city_name %></p>
            <p class="card-text mb-1"><strong>Area:</strong> <%= hotel.area_name %></p>
          </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="hotelModal<%= hotel.hotel_id %>" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title"><%= hotel.hotel_name %></h5>
                <button type="button" class="btn-close bg-white" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-md-6">
                    <% if (hotel.image) { %>
                    <img src="/uploads/<%= hotel.image %>" class="img-fluid rounded" alt="Hotel Image">
                    <% } else { %>
                    <img src="https://via.placeholder.com/400x250?text=No+Image" class="img-fluid rounded" alt="No Image">
                    <% } %>
                  </div>
                  <div class="col-md-6">
                    <p><strong>Address:</strong> <%= hotel.hotel_address %></p>
                    <p><strong>City:</strong> <%= hotel.city_name %></p>
                    <p><strong>Area:</strong> <%= hotel.area_name %></p>
                    <p><strong>Amenities:</strong></p>
                    <div class="d-flex flex-wrap gap-2">
                      <% if (hotel.Amenities) {
                        hotel.Amenities.split(',').forEach(a => {
                          const name = a.trim();
                          const icon = amenityIcons[name] || 'fa-circle-question';
                      %>
                      <span class="badge d-flex align-items-center gap-2">
                        <i class="fa <%= icon %>"></i> <%= name %>
                      </span>
                      <% }) } else { %>
                      <span>No amenities listed</span>
                      <% } %>
                    </div>
                    <p class="mt-3"><strong>Email:</strong> <%= hotel.hotel_email %></p>
                    <p><strong>Contact:</strong> <%= hotel.hotel_contact %></p>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <a href="/user/book/<%= hotel.hotel_id %>" class="btn btn-success">Book Hotel</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <% } else { %>
    <div class="alert alert-warning">No hotels available at the moment.</div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const searchInput = document.getElementById("searchInput");
    const cityFilter = document.getElementById("cityFilter");
    const amenityFilter = document.getElementById("amenityFilter");
    const hotelCards = document.querySelectorAll(".hotel-card-container");

    function filterHotels() {
      const search = searchInput.value.toLowerCase();
      const city = cityFilter.value.toLowerCase();
      const amenity = amenityFilter.value.toLowerCase();

      hotelCards.forEach(card => {
        const name = card.dataset.name;
        const cityName = card.dataset.city;
        const amenities = card.dataset.amenities;

        const matchName = name.includes(search);
        const matchCity = city === "" || cityName === city;
        const matchAmenity = amenity === "" || amenities.includes(amenity);

        card.style.display = (matchName && matchCity && matchAmenity) ? "" : "none";
      });
    }

    searchInput.addEventListener("input", filterHotels);
    cityFilter.addEventListener("change", filterHotels);
    amenityFilter.addEventListener("change", filterHotels);
  </script>
</body>

</html>
