<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f8f9fa;
    }

    .sidebar {
      height: 100vh;
      background-color: #343a40;
    }

    .sidebar .nav-link {
      color: #fff;
      font-weight: 500;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
      background-color: #495057;
    }

    .sidebar .nav-link i {
      margin-right: 10px;
    }

    .main-content {
      background-color: #fff;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .navbar-dark {
      background-color: #212529;
    }

    .navbar-brand {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <!-- Top Navbar -->
  <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-2 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">Welcome to Admin Panel</a>
    <div class="navbar-nav ms-auto">
      <div class="nav-item text-nowrap">
        <a class="nav-link px-3 text-white" href="/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse pt-3">
        <div class="position-sticky">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link <%= section === 'users' ? 'active' : '' %>" href="/admin/users">
                <i class="fas fa-users"></i> Users
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= section === 'hotels' ? 'active' : '' %>" href="/admin/hotels">
                <i class="fas fa-hotel"></i> Hotels
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= section === 'bookings' ? 'active' : '' %>" href="/admin/bookings">
                <i class="fas fa-book"></i> Bookings
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= section === 'amenities' ? 'active' : '' %>" href="/admin/amenities">
                <i class="fas fa-concierge-bell"></i> Amenities
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= section === 'ratings' ? 'active' : '' %>" href="/admin/ratings">
                <i class="fas fa-star"></i> Ratings
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
        <div class="main-content">
          <% if (section === 'users') { %>
            <%- include('partials/content/users') %>
          <% } else if (section === 'hotels') { %>
            <%- include('partials/content/hotels') %>
          <% } else if (section === 'bookings') { %>
            <%- include('partials/content/bookings') %>
          <% } else if (section === 'amenities') { %>
            <%- include('partials/content/amenities') %>
          <% } else if (section === 'ratings') { %>
            <%- include('partials/content/ratings') %>
          <% } else { %>
            <h2>Invalid Section</h2>
          <% } %>
        </div>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
